{
    "name": "lukaswhite/screenshotter",
    "description": "A PHP package for taking website screenshots using PhantomJS",
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Lukas White",
            "email": "hello@lukaswhite.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": {
            "Lukaswhite": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [    
            "php -r \"exec('chmod -R +x vendor/lukaswhite/screenshotter/src/Lukaswhite/Screenshotter/bin');\""
        ]
    },
    "require": {
        "twig/twig": "1.22.3",
        "symfony/process": "~2.3|~3.0"
    }
}
